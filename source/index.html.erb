---
styles:
  - //netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css
  - //netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css

scripts:
  - //cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js
  - //netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js
---
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="navbar">
      <ul class="nav navbar-nav">
        <li class="active">
          <a href="#home">Home</a>
        </li>
        <% data.pages.each do |page| %>
        <li><a href="#<%= page.to_url %>"><%= page %></a></li>
        <% end %>
        <li class="social">
          <a href="http://twitter.com/<%= data.global.social.twitter %>">
            <i class="fa fa-twitter"></i>
          </a>
        </li>
        <li>
          <a href="https://www.facebook.com/<%= data.global.social.facebook %>">
            <i class="fa fa-facebook"></i>
          </a>
        </li>
        <li>
          <a href="mailto:<%= data.global.contact.mail %>?subject=<%= data.global.contact.title %> website">
            <i class="fa fa-envelope"></i>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="navbar-placeholder"></div>

<header id="home">
  
</header>

<% data.pages.each do |page| %>
<% id = page.to_url %>
<div id="<%= id %>" class="block">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= page %></h1>
        <%= partial "partials/#{id}" %>
      </div>
    </div>
  </div>
</div>
<% end %>

<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <a href="http://webbox.io">
          <%= image_tag "webbox.png" %>
        </a>
      </div>
    </div>
  </div>
</footer>
